<UserControl x:Class="_2_Projekt_Restaurant_Personalplanung.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2_Projekt_Restaurant_Personalplanung"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Login" FontSize="25" TextAlignment="Center" Margin="10"></TextBlock>
        <TextBlock Text="Benutzername"  Margin="5" FontSize="20" ></TextBlock>
        <TextBox  Name="Username"  Margin="5"></TextBox>
        <TextBlock Text="Passwort" FontSize="20"  Margin="5"></TextBlock>
        <PasswordBox Name="Password"  Margin="5"></PasswordBox>
        <Button Content="Login" Click="Button_Click" FontSize="15" Margin="5" VerticalAlignment="Center" ></Button>


    </StackPanel>
</UserControl>

<UserControl x:Class="_2_Projekt_Restaurant_Personalplanung.MenueAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2_Projekt_Restaurant_Personalplanung"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Menü" HorizontalAlignment="Center" FontSize="30"/>

        <Button Content="Dienstplant für Küchenpersonal anzeigen" Margin="5,20,5,5" Width="300" Click="PlanKücheAnzeigen" FontSize="15"/>
        <Button Content="Dienstplant für Servicepersonal anzeigen" Margin="5" Width="300" Click="PlanServiceAnzeigen" FontSize="15"/>
        <Button Content="Neuen Dienstplan erstellen" Margin="5" Width="300" Click="DienstplanErstellen" FontSize="15"/>
        <Button Content="Ausloggen" Margin="5,20,5,5" Width="300" Click="Ausloggen" FontSize="15"/>
    </StackPanel>
</UserControl>
